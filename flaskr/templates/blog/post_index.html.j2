{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}{{ post['title'] }} {% endblock %}</h1>
{% if g.user['id'] == post['author_id'] %}
    <a class="action" href="{{ url_for('blog.update', id=post['id']) }}">Edit</a>
{% endif %}
{% endblock %}

{% block content %}
    <article class="post">
        <p class="body">{{ post['body'] }}</p>
        <span>👍({{ post['likes'] if post['likes'] else 0 }})</span> <span>👎({{ post['dislikes'] if post['dislikes'] else 0 }})</span>
        <div class="about">by {{ post['username'] }} on {{ post['created'].strftime('%Y-%m-%d') }} #{{ post['id']}}</div>
    </article>
{% endblock %}