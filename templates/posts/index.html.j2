{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Posts{% endblock %}</h1>
  {% if g.user %}
    <a class="action" href="{{url_for('post_bp.store')}}">New</a>
  {% endif %}
{% endblock %}

{% block content %}
    {% for post in posts %}
      <article class="post">
        <header>
          <div>
            <h1><a href="{{ url_for('post_bp.update', id=post['id'])}}">{{ post['title'] }}</a></h1>
            <div class="about">by {{ post['name'] }} on {{ post['created'].strftime('%d-%m-%Y at %H:%M')}}</div>
          </div>
        </header>
      </article>
      {% if not loop.last %}
        <hr>
      {% endif %}
    {% endfor %}
{% endblock %}
